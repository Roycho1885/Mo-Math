<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >
    
     <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Ingreso_datos"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/presu"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:textColor="#ff2183b1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scoe"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="textCapCharacters"
            android:gravity="center"
            android:textColor="#ff2183b1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tercoe"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:textColor="#ff2183b1"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

    </TableRow>

    <Button
        android:id="@+id/calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:textColor="#ff1a1847"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/borrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        android:textColor="#ff1a1847"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/raiz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/raices"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/tex1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/praiz"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/x1"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:textColor="#ff2183b1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sraiz"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/x2"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:textColor="#ff2183b1"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/texver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/vertices"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/vertice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2183b1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texformadeecu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forma1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/formadeecu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2183b1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texformageneral"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forma2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/formageneral"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2183b1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texformafact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forma3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/formafact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2183b1"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/texformacano"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forma4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/formacano"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2183b1"
        android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
